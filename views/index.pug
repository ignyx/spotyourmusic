extends layout

block content
  h1 Spot your music
  p Welcome to this SpotYourMusic server. Use it wisely.
  span Current job count:
    b= title
  p Estimated size : #{size}

  form(action='/search' method='get') 
    h3 Search
    input(type='text' name='q')
    input(type='submit')

  form(action='/spotify')
    h3 Spotify lookup
    label(for='url') Url :
    input(type='text' name='url' placeholder='https://open.spotify.com/...')
    input(type='submit')

  if latestFeed
    form(action=`/feed/${latestFeed}/`, method='POST')
      h3 Add episode to feed
        a(href=`/feed/${latestFeed}/`)
          i #{latestFeed}
      label(for='videoId') Youtube Video Id or url :
      input(type='text' id='videoId' name='videoId')
      input(type='submit')
